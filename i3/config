# Multimedia keys and other key bindings

# Using pulseaudio as daemon for audio firmware
# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute 0 toggle # mute microphone

# Sreen brightness controls
# With working xbacklight
#bindsym XF86MonBrightnessUp exec xbacklight -inc 5 # increase screen brightness
#bindsym XF86MonBrightnessDown exec xbacklight -dec 5 # decrease screen brightness
# Without working xbaclight
bindsym XF86MonBrightnessUp exec sudo backlightControl -i 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec sudo backlightControl -d 5 # decrease screen brightness

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Calculator sends to workspace with chats app
bindsym XF86Calculator workspace $ws10

# Screen lock
#bindsym Super_L exec lock

# Reset polybar
bindsym $mod+p exec --no-startup-id $HOME/.config/polybar/launch.sh

# Print whole screen
bindsym Print exec printscreen -t 1

# Choose window or area to print
bindsym $mod+Print exec printscreen -t 2

